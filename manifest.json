{
    "name": "Web Carbon Calculator",
    "description": "Displays the carbon emissions of the website you're visiting.",
    "version": "1.0.0",
    "manifest_version": 3,
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}